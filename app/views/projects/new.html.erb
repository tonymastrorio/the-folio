<h1>Create a new project</h1>

<%= form_for(@project) do |f| %>

    <%= f.collection_select :portfolio_id, current_user.portfolios.all, :id, :name %>

    <%= f.label :title %>
    <%= f.text_field :title %><br><br>

    <%= f.label :description %>
    <%= f.text_area :description %><br><br>

    <%= f.label :github_url %>
    <%= f.text_field :github_url %><br><br>

    <%= f.file_field :image %><br><br>

    <%= f.collection_check_boxes :skill_ids, Skill.all, :id, :name %>

    <%= f.submit %>
<% end %>