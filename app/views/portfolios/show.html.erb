<h1><%= @portfolio.name %></h1>

<div class="container center-container">
    <div class="row">
        <% @projects.each do |project| %>
            <div class="col-sm-4">
                <a href="/portfolios/<%= @portfolio.id %>/projects/<%= project.id %>">
                    <%= image_tag project.image.url(:medium), :class => "img-rounded img-responsive" %><br>
                    <div class="caption center-block"><%= project.title %></div>
                </a>
            </div>
        <% end %>
    </div>
</div>


<%= button_to "Edit this Portfolio", edit_user_portfolio_path, method: :get %>
<br><br>

<%= button_to "Delete this Portfolio", { :controller => "portfolios", :action => "destroy", id: params[:id] }, :method => "delete", data: { :confirm => "Are you sure?" } %>
<br><br>
<%= button_to "Add a Project to this Portfolio", new_portfolio_project_path(@portfolio), method: :get %>